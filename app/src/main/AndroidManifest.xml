            android:name=".BudgetSetup"
            android:exported="false"
            android:finishOnTaskLaunch="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".LogsManager"
            android:exported="false" />
        <activity
            android:name=".GraphAnalytics"
            android:exported="false" />
        <activity
            android:name=".MainMenu"
            android:exported="false" />
        <activity
            android:windowSoftInputMode="adjustResize"
